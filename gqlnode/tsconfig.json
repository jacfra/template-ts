{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest",
      "reflect-metadata"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "jest.config.js",
    "ecosystem.config.js",
    ".eslint.js"
  ]
}